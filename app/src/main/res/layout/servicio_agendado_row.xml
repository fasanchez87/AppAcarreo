<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="1dp">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        card_view:contentPadding="10dp"
        card_view:cardElevation="7dp"
        android:layout_margin="3dp"
        android:id="@+id/card_view_servicios_disponibles"
        >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="vertical">





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/uno"
                android:layout_below="@id/uno">

                <TextView
                    android:id="@+id/textxzxzxzxViewCodigoSolicitud"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SOLICITUD N°: "
                    android:textColor="@color/colorPrimary"

                    />

                <TextView
                    android:id="@+id/textViewCodigoSolicitudServicioAgendado"
                    android:textSize="16dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/uno_uno"
                android:layout_below="@id/uno">

                <TextView
                    android:id="@+id/textxzxzadasdadxzxViewCodigoSolicitud"
                    android:textSize="16dp"
                    android:layout_alignParentTop="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TELEFONO CLIENTE: "
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/textViewTelefonoClienteServicioAgendado"
                    android:textSize="16dp"
                    android:layout_weight="1"
                    android:layout_alignParentTop="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/dos"
                android:layout_below="@id/uno_uno">

                <TextView
                    android:id="@+id/textViewDirweweeccionOrigenSolicitudServicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DIRECCIÓN ORIGEN: "
                    android:textColor="@color/colorPrimary"
                    android:ellipsize="none"
                    android:maxLines="100"
                    android:scrollHorizontally="false"
                    />

                <TextView
                    android:id="@+id/textViewDireccionOrigenServicioAgendado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:ellipsize="none"
                    android:maxLines="100"
                    android:scrollHorizontally="false"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/tres"
                android:layout_below="@id/dos">

                <TextView
                    android:id="@+id/textViewDiredfdfdfdfccionDestinoSolicitudServicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DIRECCIÓN DESTINO: "
                    android:textColor="@color/colorPrimary"
                    android:ellipsize="none"
                    android:maxLines="100"
                    android:scrollHorizontally="false"
                    />

                <TextView
                    android:id="@+id/textViewDireccionDestinoServicioAgendado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:ellipsize="none"
                    android:maxLines="100"
                    android:scrollHorizontally="false"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/cuatro"
                android:layout_below="@id/tres">

                <TextView
                    android:id="@+id/textViewFe34234chaSolicitudServicio"
                    android:layout_below="@id/tres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FECHA Y HORA: "
                    android:textColor="@color/colorPrimary"
                    android:ellipsize="none"
                    android:maxLines="100"
                    android:scrollHorizontally="false"
                    />

                <TextView
                    android:id="@+id/textViewFechaServicioAgendado"
                    android:layout_below="@id/tres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:ellipsize="none"
                    android:maxLines="100"
                    android:scrollHorizontally="false"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/cinco"
                android:layout_below="@id/cuatro">

                <TextView
                    android:id="@+id/textViewDxccddistanciaSolicitudServicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DISTANCIA: "
                    android:ellipsize="none"
                    android:textColor="@color/colorPrimary"
                    android:maxLines="100"
                    android:scrollHorizontally="false"
                    android:layout_below="@+id/cuatro"
                    />

                <TextView
                    android:id="@+id/textViewDistanciaServicioAgendado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="none"
                    android:textColor="@color/colorPrimary"
                    android:maxLines="100"
                    android:scrollHorizontally="false"
                    android:layout_below="@+id/cuatro"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/seis"
                android:layout_below="@id/cinco">

                <TextView
                    android:id="@+id/textViewTarifxssadasaSolicitudServicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TARIFA: "
                    android:ellipsize="none"
                    android:textColor="@color/colorPrimary"
                    android:maxLines="100"
                    android:scrollHorizontally="false"
                    android:layout_below="@+id/cinco"
                    />

                <TextView
                    android:id="@+id/textViewTarifaServicioAgendado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$"
                    android:layout_weight="1"
                    android:ellipsize="none"
                    android:textColor="@color/colorPrimary"
                    android:maxLines="100"
                    android:scrollHorizontally="false"
                    android:layout_below="@+id/cinco"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/siete"
                android:layout_below="@id/seis">

                <TextView
                    android:id="@+id/textViewRequiereEmbalasdsdsdjeSolicitudServicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EMBALAJE: "
                    android:ellipsize="none"
                    android:textColor="@color/colorPrimary"
                    android:maxLines="100"
                    android:scrollHorizontally="false"
                    android:layout_below="@+id/seis"
                    />

                <TextView
                    android:id="@+id/textViewRequiereEmbalajeServicioAgendado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="none"
                    android:textColor="@color/colorPrimary"
                    android:maxLines="100"
                    android:scrollHorizontally="false"
                    android:layout_below="@+id/seis"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ocho"
                android:layout_below="@id/siete">


                <TextView
                    android:id="@+id/textViewCantidadAuxilisfwerwaresSolicitudServicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AUXILIARES: "
                    android:ellipsize="none"
                    android:textColor="@color/colorPrimary"
                    android:maxLines="100"
                    android:scrollHorizontally="false"
                    android:layout_below="@+id/siete"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/textViewCantidadAuxiliaresServicioAgendado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="none"
                    android:textColor="@color/colorPrimary"
                    android:maxLines="100"
                    android:scrollHorizontally="false"
                    android:layout_below="@+id/siete"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:gravity="right"
                android:id="@+id/nueve"
                android:layout_below="@id/ocho">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonIniciarServicioAgendado"
                    android:text="   INICIAR   "
                    android:textColor="@color/blanco"
                    android:background="@color/colorAccent"
                    android:layout_below="@+id/textViewDistanciaSolicitudServicio"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@+id/textViewRequiereEmbalajeSolicitudServicio" />




            </LinearLayout>



        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>